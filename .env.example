# Project Settings
PROJECT_NAME="PolystirolHub Backend"
API_V1_STR="/api/v1"

# CORS (Comma separated list of origins)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database (PostgreSQL)
# If running locally (e.g. via docker-compose up -d), use "localhost"
# If running inside Docker, use "db"
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app

# Redis
# If running locally, use "localhost"
# If running inside Docker, use "redis"
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication
SECRET_KEY=CHANGE_THIS_SECRET_KEY_TO_A_SECURE_VALUE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth Providers
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
STEAM_API_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:3000
